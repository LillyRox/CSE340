<header id="top-header" role="banner">
  <div class="site-branding">
    <h1 class="site-name">
      <a href="/" title="Return to the homepage">CSE Motors</a>
    </h1>
  </div>

  <div id="tools" class="user-tools">
    <% if (!locals.accountData) { %>
      <!-- Usuario no logueado -->
      <a href="/account/login" title="Click to log in to your account">My Account</a>
    <% } else { %>
      <!-- Usuario logueado -->
      <span>Welcome <%= accountData.account_firstname %></span>
      <a href="/account/logout" title="Click to log out">Logout</a>

      <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
        <!-- Link extra solo para Employee/Admin -->
        <a href="/inv/" title="Go to Inventory Management">Inventory Management</a>
      <% } %>
    <% } %>
  </div>
</header>
