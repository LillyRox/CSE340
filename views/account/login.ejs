

<main class="container">
  <h1><%= title %></h1>

  <!-- Messages -->
  <%- messages() %>

  <!-- Login -->
    <form class="login-form" id="loginForm" action="/account/login" method="post">
      <label for="account_email">Email:</label>
      <input type="email" id="account_email" name="account_email" required>
    
      <label for="account_password">Password:</label>
      <div class="password-hint">
        Passwords must be at least 12 characters, contain at least 1 number, 1 capital letter, and 1 special character.
      </div>
      <input 
        type="password"
        id="account_password"
        name="account_password"
        required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
  
      <button type="submit">Login</button>
    </form>


  <!-- Link -->
  <p class="register-link">
    Don't have an account? 
    <a href="/account/register">Register here</a>
  </p>
</main>


