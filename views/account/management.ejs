<main>
  <h1>Account Management</h1>

  <% if (message && message.length > 0) { %>
    <div class="notice"><%= message %></div>
  <% } %>

  <% if (errors && errors.length > 0) { %>
    <div class="errors">
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <% if (account && account.firstname) { %>
    <h2>Welcome <%= account.firstname %></h2>
  <% } %>

  <!-- Link to update account information -->
  <p>
    <a href="/account/update/<%= account.account_id %>">Update Account Information</a>
  </p>

  <!-- Inventory management only for Employee/Admin -->
  <% if (account && (account.account_type === "Employee" || account.account_type === "Admin")) { %>
    <h3>Inventory Management</h3>
    <p>
      <a href="/inv/manage">Go to Inventory Management</a>
    </p>
  <% } %>
</main>
